<?xml version="1.0" encoding="utf-8" ?>
<Application xmlns="http://xamarin.com/schemas/2014/forms"
             xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
             x:Class="CefaleasApp.App">
    <Application.Resources>
        <ResourceDictionary>
            <!--Global Styles-->
            <Color x:Key="NavigationPrimary">#2196F3</Color>
            <Color x:Key="PrimaryBackgroundColor">#F0F0F0</Color>
            <Color x:Key="PrimaryDarkBackgroundColor">#808080</Color>
            <Color x:Key="PrimaryLigthBackgroundColor">#E0E0E0</Color>
            <Color x:Key="PrimaryTextColor">#FFFFFF</Color>
            <Color x:Key="SecondaryBackgroundColor">#F0F0F0</Color>
            <Color x:Key="SecondaryDarkBackgroundColor">#B1B1B1</Color>
            <Color x:Key="SecondaryLightBackgroundColor">#F6F6F6</Color>
            <Color x:Key="SecondaryTextColor">#000000</Color>
            <Color x:Key="ErrorBackgroundColor">#A41D00</Color>
            <Color x:Key="ErrorColor">#A41D00</Color>
            <Color x:Key="WarningBackgroundColor">#F96D00</Color>
            <Color x:Key="WarningTextColor">#FFFFFF</Color>
            <Style TargetType="NavigationPage">
                <Setter Property="BarBackgroundColor" Value="{StaticResource NavigationPrimary}"/>
                <Setter Property="BarTextColor" Value="{StaticResource PrimaryTextColor}"/>
            </Style>
        </ResourceDictionary>        
    </Application.Resources>
</Application>